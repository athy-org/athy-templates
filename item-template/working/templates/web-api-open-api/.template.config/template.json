{
  "$schema": "http://json.schemastore.org/template",
  "author": "Me",
  "classifications": [
    "Common",
    "WebAPI",
    "C#10"
  ],
  "identity": "Athy.Template.OpenAPI.API",
  "name": "Athy OpenAPI Web API Template",
  "shortName": "athy-web-api-open-api",
  "tags": {
    "language": "C#",
    "type": "project"
  },
  "symbols": {
    "ClientCode": {
      "type": "parameter",
      "description": "The three- or four-letter client code",
      "datatype": "string",
      "isRequired": true
    },
    "ProjectCode": {
      "type": "parameter",
      "description": "The three- or four-letter project code",
      "datatype": "string",
      "isRequired": true
    },
    "TemplateProject_Rename": {
      "type": "generated",
      "description": "New namespace, csproj & directory name based on ClientCode.ProjectCode convention",
      "generator": "join",
      "fileRename": "TemplateProject",
      "replaces": "TemplateProject",
      "parameters": {
        "separator": ".",
        "symbols": [
          {
            "type": "ref",
            "value": "ClientCode"
          },
          {
            "type": "ref",
            "value": "ProjectCode"
          }
        ]
      }
    },
    "Athy_ControllerName": {
      "type": "parameter",
      "fileRename": "Athy_SampleController",
      "replaces": "Athy_SampleController"
    },
    "Athy_ControllerRoute": {
      "type": "parameter",
      "replaces": "Athy_ControllerRoute"
    },
    "Athy_EndpointRoute": {
      "type": "parameter",
      "replaces": "Athy_EndpointRoute"
    },
    "Athy_ReturnTypeName": {
      "type": "parameter",
      "replaces": "Athy_ReturnTypeName",
      "fileRename": "Athy_ReturnTypeName"
    },
    "Athy_ReturnTypeBody": {
      "type": "parameter",
      "replaces": "Athy_ReturnTypeBody"
    },
    "Athy_HttpGetMethodName": {
      "type": "parameter",
      "replaces": "Athy_HttpGetMethodName"
    },
    "Athy_PathParam":{
      "type": "parameter",
      "replaces": "Athy_PathParam"
    },
    "Athy_QueryStringParam": {
      "type": "parameter",
      "replaces": "Athy_QueryStringParam"
    },
    "Athy_ContentType": {
      "type": "parameter",
      "replaces": "Athy_ContentType"
    },
    "Athy_StatusCode": {
      "type": "parameter",
      "replaces": "(200)"
    }, 
    "Athy_EndpointSignature":{
      "type": "parameter",
      "replaces": "Athy_EndpointSignature",
      "description": "Use to represent the endpoints entire signature. Code will be filled in by the generator according to the spec and conventions."
    },
    "Athy_EndpointDescription":{
      "type": "parameter",
      "replaces": "Athy_EndpointDescription"
    },
    "Athy_HeaderParam":{
      "type": "parameter",
      "replaces": "Athy_HeaderParam"
    }
  }
}