{
  "$schema": "http://json.schemastore.org/template",
  "author": "Me",
  "classifications": [
    "Common",
    "WebAPI",
    "C#10"
  ],
  "identity": "Athy.Template.API",
  "name": "Athy Web API Template",
  "shortName": "athy-web-api",
  "tags": {
    "language": "C#",
    "type": "project"
  },
  "symbols": {
    "ClientCode": {
      "type": "parameter",
      "description": "The three- or four-letter client code",
      "datatype": "string",
      "isRequired": true
    },
    "ProjectCode": {
      "type": "parameter",
      "description": "The three- or four-letter project code",
      "datatype": "string",
      "isRequired": true
    },
    "HttpPort": {
      "type": "parameter",
      "description": "The APIs HTTP port",
      "replaces": "{HttpPort}",
      "datatype": "int",
      "defaultValue": "9000"
    },
    "HttpsPort": {
      "type": "parameter",
      "description": "The APIs HTTPS port",
      "replaces": "{HttpsPort}",
      "datatype": "int",
      "defaultValue": "9001"
    },
    "TemplateProject_Rename": {
      "type": "generated",
      "description": "New namespace, csproj & directory name based on ClientCode.ProjectCode convention",
      "generator": "join",
      "fileRename": "TemplateProject",
      "replaces": "TemplateProject",
      "parameters": {
        "separator": ".",
        "symbols": [
          {
            "type": "ref",
            "value": "ClientCode"
          },
          {
            "type": "ref",
            "value": "ProjectCode"
          }
        ]
      }
    },
    "ClientCode_ToLower": {
      "type": "generated",
      "generator": "casing",
      "parameters": {
        "source": "ClientCode",
        "toLower": true
      }
    },
    "ProjectCode_ToLower": {
      "type": "generated",
      "generator": "casing",
      "parameters": {
        "source": "ProjectCode",
        "toLower": true
      }
    }
  }
}